	<fieldset>
		<field name="id" 
			type="text"
			label="JGLOBAL_FIELD_ID_LABEL"
			description="JGLOBAL_FIELD_ID_DESC"
			default="0"
			readonly="true"
			class="readonly"
		/>

		<field name="title" 
			type="text"
			label="COM_SCHOLARLAB_SENSOR_NAME_LABEL" 
			description="COM_SCHOLARLAB_SENSOR_NAME_DESC"
			class="inputbox"
			required="true"
		 />

		<field name="sensor_type" 
			type="text"
			label="COM_SCHOLARLAB_SENSOR_TYPE_LABEL" 
			description="COM_SCHOLARLAB_SENSOR_TYPE_DESC"
			class="inputbox"
			required="1"
		 />

		<field name="sensor_id" 
			type="text"
			label="COM_SCHOLARLAB_SENSOR_ID_LABEL" 
			description="COM_SCHOLARLAB_SENSOR_TYPE_DESC"
			class="inputbox"
			required="0"
		 />

		<field
	      name="catid"
	      type="category"
	      extension="com_scholarlab"
	      class="inputbox"
	      label="JCATEGORY"
	      description="JFIELD_CATEGORY_DESC"
	      defaul="0"
	      >
	    	<option value="0">JOPTION_SELECT_CATEGORY</option>
	    </field>

	    <field name="published"
		    type="radio"
		    class="btn-group btn-group-yesno"
			label="COM_SCHOLARLAB_SENSOR_PUBLISHED_LABEL"
			default="1"
		    >
			    <option value="1">JYES</option>
			    <option value="0">JNO</option>
		</field>

	</fieldset>
</form>
